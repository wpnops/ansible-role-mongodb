net:
  port: {{ mongodb_port }}
  bindIp: {{ mongodb_bindip }}
systemLog:
  path: {{ _mongodb_log_path }}
  logAppend: true
  destination: file
storage:
  dbPath: {{ _mongodb_storage_dbpath }}
  oplogMinRetentionHours: {{ _mongodb_storage_oplogretention }}
  journal:
    commitIntervalMs: 100
replication:
  replSetName: {{ mongodb_replicaset_name }}
{% if mongodb_sharding_role != '' %}
sharding:
  clusterRole: "{{ mongodb_sharding_role }}"
{% endif %}
